<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <!-- שורה עליונה: כפתור חזור + כותרת -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/trip_details_back_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_revert"
                android:contentDescription="Back"
                app:tint="#0B3D91"/>

            <TextView
                android:id="@+id/trip_details_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trip Details"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#0B3D91"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="16dp"/>
        </LinearLayout>

        <!-- אזור תמונה או placeholder -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="32dp"
            android:background="#E0E0E0">

            <ImageView
                android:id="@+id/trip_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:contentDescription="Trip Image" />

            <TextView
                android:id="@+id/trip_image_placeholder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload Image Here"
                android:textColor="#888888"
                android:textSize="16sp"
                android:layout_gravity="center" />
        </FrameLayout>

        <TextView
            android:id="@+id/trip_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Orleans, Louisiana"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#0B3D91"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:id="@+id/trip_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="150dp"
            android:text="A weekend in the vibrant city of jazz! Highlights include visits to the French Quarter, jazz clubs, local cafes, and more."
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginBottom="40dp"/>

        <RatingBar
            android:id="@+id/trip_rating_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="1"
            android:rating="0"
            android:layout_marginBottom="16dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_reviews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:padding="8dp"
            />

        <EditText
            android:id="@+id/trip_review_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Write your review here..."
            android:minHeight="100dp"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btn_submit_review"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit Review"
            android:backgroundTint="#0B3D91"
            android:textColor="#FFFFFF"
            android:padding="16dp"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btn_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ask me a question"
            android:backgroundTint="#0B3D91"
            android:textColor="#FFFFFF"
            android:padding="16dp"
            android:textSize="16sp"
            android:layout_marginBottom="32dp"/>

        <Button
            android:id="@+id/btn_delete_trip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete Trip"
            android:backgroundTint="#FF4444"
            android:textColor="#FFFFFF"
            android:padding="16dp"
            android:textSize="16sp"
            android:layout_marginBottom="32dp"
            android:visibility="gone"/>

    </LinearLayout>

</ScrollView>
