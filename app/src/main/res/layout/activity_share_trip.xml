<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <!-- שורה עליונה: כפתור חזור + כותרת -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/share_trip_back_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_revert"
                android:contentDescription="Back"
                app:tint="#0B3D91"/>

            <TextView
                android:id="@+id/share_trip_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Share Your Trip"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#0B3D91"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp"/>
        </LinearLayout>

        <EditText
            android:id="@+id/edit_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Location"
            android:inputType="text"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/edit_description"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:hint="Description"
            android:inputType="textMultiLine"
            android:gravity="top"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btn_add_photos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Photos"
            android:backgroundTint="#0B3D91"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"/>

        <Button
            android:id="@+id/btn_submit_trip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:backgroundTint="#0B3D91"
            android:textColor="#FFFFFF"
            android:padding="16dp"
            android:textSize="18sp"
            android:layout_marginTop="32dp"/>

    </LinearLayout>

</ScrollView>
